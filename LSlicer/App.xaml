<prism:PrismApplication x:Class="LSlicer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LSlicer"
             xmlns:prism="http://prismlibrary.com/"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
                <!--<ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Accents/Black.xaml" />-->
                <ResourceDictionary Source="pack://application:,,,/Fluent;component/Themes/Themes/Dark.Red.xaml" />
                <ResourceDictionary Source="ViewStyles/ScrollStyles.xaml" />
                <ResourceDictionary Source="ViewStyles/ControlStyles.xaml" />
                <ResourceDictionary Source="ViewStyles/ControlTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
